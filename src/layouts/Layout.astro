---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import LeftMenu from "../components/LeftMenu.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions fallback="none" />
	</head>
	<body class="bg-[#0f0f0f] text-white">
		<div id="app" class="relative h-screen p-2 gap-2">
			<aside
				class="[grid-area:aside] bg-slate-800 flex-col flex overflow-y-auto"
			>
				<LeftMenu />
			</aside>
			<div class="[grid-area:main] bg-gray-900"><slot /></div>
			<div class="[grid-area:menu] bg-sky-950">
				<Header />
			</div>
		</div>
		<style is:global>
			#app {
				display: grid;
				grid-template-areas:
					"menu menu menu"
					"aside main main";
				grid-template-columns: 250px 1fr;
				grid-template-rows: auto 1fr;
			}
			html {
				font-family: system-ui, sans-serif;
				background: #13151a;
				background-size: 224px;
				color-scheme: dark;
			}
			code {
				font-family:
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue",
					sans-serif;
			}
		</style>
	</body>
</html>
